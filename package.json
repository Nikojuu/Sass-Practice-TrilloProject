{
  "name": "trillo",
  "version": "0.1.0",
  "description": "Trillo app",
  "main": "public/index.html",
  "author": "Niko",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "copy:img": "copyfiles -u 1 ./src/img/**/* public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:img": "onchange \"/src/img/**/*\" -- npm run copy:html",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "concat:css": "concat -o public/css/style.concat.css public/css/main.css public/css/icon-font.css",
    "prefix:css": "postcss public/css/style.concat.css --use autoprefixer -o public/css/style.prefix.css",
    "compress:css": "sass public/css/style.prefix.css public/css/style.css --style=compressed",
    
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.7",
    "concat": "^1.0.3",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8",
    "sass-migrator": "^1.7.2"
  }
}
